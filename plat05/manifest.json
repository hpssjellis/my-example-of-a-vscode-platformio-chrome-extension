{
  "manifest_version": 3,
  "name": "myKeyFreePlatformIO",
  "version": "1.0",
  "description": "Sends Arduino code to a local service for PlatformIO build and flash.",
  "permissions": [
    "sidePanel",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "http://localhost/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Open PlatformIO Sidepanel"
  },
  "side_panel": {
    "default_path": "mySidePanel.html"
  },
  "background": {
    "service_worker": "myServiceWorker.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src http://localhost:8080"
  }
}