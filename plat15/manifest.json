{
  "manifest_version": 3,
  "name": "myKeyFreePlatformIO & TFLite Tools",
  "version": "2.0",
  "description": "Arduino code compilation/flashing and TensorFlow.js to TFLite model conversion via local bridge server.",
  "permissions": [
    "sidePanel",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Open PlatformIO & TFLite Tools"
  },
  "side_panel": {
    "default_path": "mySidePanel.html"
  },
  "background": {
    "service_worker": "myServiceWorker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}